{
  "extends": "./tsconfig.json", 
  "compilerOptions": {
    "module": "CommonJS", 
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true, 
    "outDir": "dist"
  },
  
  // ✅ CORREÇÃO: Foca apenas no servidor e nos arquivos de declaração globais
  "include": [
    "server.ts",
    "**/*.d.ts"
  ],
  
  // ✅ CORREÇÃO: Mantém a exclusão da pasta de código fonte do Angular.
  "exclude": [
    "src"
  ]
}